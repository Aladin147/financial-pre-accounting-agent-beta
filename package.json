{
  "name": "financial-pre-accounting-agent-beta",
  "version": "3.0.0-alpha.1",
  "description": "A cross-platform desktop application for pre-accounting management with Moroccan Finance Law 2025 compliance",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "lint": "eslint src/**/*.{js,jsx}",
    "lint:fix": "eslint src/**/*.{js,jsx} --fix",
    "backup": "node scripts/backup.js",
    "logs": "node scripts/view-logs.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/financial-pre-accounting-agent-beta.git"
  },
  "keywords": [
    "accounting",
    "finance",
    "tax",
    "morocco",
    "electron",
    "desktop",
    "offline"
  ],
  "author": "Your Company Name",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "archiver": "^6.0.1",
    "chart.js": "^4.4.3",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0",
    "exceljs": "^4.4.0",
    "jimp": "^0.22.12",
    "lowdb": "^1.0.0",
    "mammoth": "^1.6.0",
    "node-tesseract-ocr": "^2.2.1",
    "pdfjs-dist": "^3.10.111",
    "pdfkit": "^0.14.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-router-dom": "^6.22.3",
    "tailwindcss": "^3.4.1",
    "uuid": "^9.0.1",
    "worker-threads-pool": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.2",
    "@babel/preset-env": "^7.24.2",
    "@babel/preset-react": "^7.24.1",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^9.1.3",
    "electron": "^21.4.4",
    "electron-builder": "^23.6.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.38",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.yourcompany.financialpreaccounting",
    "productName": "Financial Pre-Accounting Agent",
    "directories": {
      "output": "builds"
    },
    "files": [
      "src/**/*",
      "resources/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "resources/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "resources/icons/icon.png"
    }
  }
}
